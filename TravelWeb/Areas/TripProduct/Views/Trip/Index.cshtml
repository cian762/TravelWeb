@model IEnumerable<TravelWeb.Areas.TripProduct.Models.ViewModels.TripIndexViewModel>

@{
    ViewData["Title"] = "行程商品管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* 調整表格行高與垂直對齊 */
    .align-middle td {
        vertical-align: middle !important;
        padding: 15px 8px !important;
    }

    /* 自定義大按鈕樣式 */
    .btn-manage {
        padding: 0.5rem 0.8rem;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .grayscale-img {
        transition: 0.3s;
    }
</style>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h1 class="fw-bold m-0">行程商品管理</h1>
    </div>

    <div class="card mb-3 shadow-sm border-0">
        <div class="card-body bg-light rounded shadow-sm">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold small text-muted">關鍵字搜尋</label>
                    <input type="text" name="keyword" class="form-control shadow-sm" placeholder="輸入行程名稱..." value="@ViewData["Keyword"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">地區篩選</label>
                    <select name="regionId" class="form-select shadow-sm" asp-items="ViewBag.Regions">
                        <option value="">-- 全部地區 --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small text-muted">狀態</label>
                    <select name="status" class="form-select shadow-sm">
                        <option value="">-- 全部 --</option>
                        <option value="上架">上架中</option>
                        <option value="下架">已下架</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label d-none d-md-block">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary shadow-sm flex-grow-1 d-flex align-items-center justify-content-center" style="height: 40px;">
                            <i class="fas fa-search me-2"></i>搜尋
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center justify-content-center" style="width: 50px; height: 40px;" title="重置">
                            <i class="fas fa-undo"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white py-3">
            <div class="fs-5"><i class="fas fa-list me-2"></i>行程清單</div>
            <a asp-area="TripProduct" asp-controller="Trip" asp-action="CreatProduct" class="btn btn-success px-4 shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> 新增行程商品
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3" style="width: 70px;">ID</th>
                        <th style="width: 140px;">預覽圖</th>
                        <th>行程名稱</th>
                        <th>地區</th>
                        <th>價格</th>
                        <th>狀態</th>
                        <th class="text-center" style="width: 320px;">管理與操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @* 💡 判斷是否為下架狀態 *@
                        bool isInactive = item.Status != "上架";

                        <tr .style="@(isInactive ? "background-color: #f8f9fa !important; color: #adb5bd !important;" : "")">
                            <td class="ps-3 fw-bold">@item.TripProductId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" class="img-thumbnail shadow-sm"
                                         style="width: 120px; height: 80px; object-fit: cover; @(isInactive ? "filter: grayscale(100%); opacity: 0.5;" : "")" />
                                }
                                else
                                {
                                    <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded border" style="width: 120px; height: 80px; font-size: 0.8rem;">無圖片</div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold fs-6 @(isInactive ? "" : "text-primary")">@item.ProductName</div>
                            </td>
                            <td>
                                   <span class="badge @(isInactive ? "bg-secondary text-white" : "bg-info text-dark") p-2 fs-5">@item.RegionName</span>
                            </td>
                            <td class="fw-bold fs-5 @(isInactive ? "" : "text-danger")">@item.DisplayPrice</td>
                            <td>
                                <span class="badge rounded-pill @(isInactive ? "bg-dark" : "bg-success") px-3 py-2 shadow-sm fs-5">
                                    @(isInactive ? "已下架" : "上架中")
                                </span>
                            </td>
                            <td class="px-3" style="min-width: 320px;">
                                @* --- 1. 檔期管理：深灰色長方形按鈕 --- *@
                                <div class="d-grid mb-2">
                                    @if (isInactive)
                                    {
                                        @* 💡 下架時：深黑灰色感 (使用 #343a40 搭配 opacity 呈現灰黑質感) *@
                                        <button class="btn shadow-sm py-2"
                                                style="cursor: not-allowed; background-color: #212529; color: #adb5bd; border: none; opacity: 0.7; width: 100%;">
                                            <i class="fas fa-clock me-2"></i>檔期管理
                                        </button>
                                    }
                                    else
                                    {
                                        @* 💡 上架時：亮藍色 (使用鮮豔的電光藍 #007bff) *@
                                        <button class="btn shadow-sm py-2 text-white"
                                                style="background-color: #007bff; border: none; width: 100%; font-weight: bold;"
                                                onclick="openSchedule(@item.TripProductId)">
                                            <i class="fas fa-clock me-2"></i>檔期管理
                                        </button>
                                    }
                                </div>

                                @* --- 2. 下方三個橫向按鈕：Icon 在左，文字在右且不換行 --- *@
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-area="TripProduct" asp-controller="Trip" asp-action="ItemIndex" asp-route-id="@item.TripProductId"
                                       class="btn d-flex align-items-center justify-content-center shadow-sm px-3"
                                       style="height: 45px; min-width: 100px; background-color: #a2d2ff; color: #003e5c; border: none; white-space: nowrap; font-weight: 500; transition: 0.3s;">
                                        <i class="fas fa-calendar-alt me-2"></i><span>編排細項</span>
                                    </a>
      
                                    @* 修改：黃色邊框按鈕 *@
                                    <a asp-action="UpProduct" asp-route-id="@item.TripProductId"
                                       class="btn d-flex align-items-center justify-content-center shadow-sm px-2"
                                       style="height: 45px; min-width: 75px; background-color: white; color: #ffc107; border: 1.5px solid #ffc107; white-space: nowrap;">
                                        <i class="fas fa-edit me-2"></i><span>修改</span>
                                    </a>

                                    @* 刪除：紅色邊框按鈕 *@
                                    <button type="button" class="btn d-flex align-items-center justify-content-center shadow-sm px-2"
                                            style="height: 45px; min-width: 75px; background-color: white; color: #e35d5d; border: 1.5px solid #e35d5d; white-space: nowrap;"
                                            onclick="confirmDelete(@item.TripProductId, '@item.ProductName')">
                                        <i class="fas fa-trash-alt me-2"></i><span>刪除</span>
                                    </button>
                                    <form id="delete-form-@item.TripProductId" asp-action="PDelete" asp-method="post" style="display:none;">
                                        <input type="hidden" name="id" value="@item.TripProductId" />
                                        @Html.AntiForgeryToken()
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 0)
        {
            <div class="card-footer bg-white py-4 border-top">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0 gap-2">
                        @* gap-2 讓按鈕分開，不黏在一起 *@

                        @* --- 上一頁 --- *@
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center"
                               style="width: 45px; height: 45px; background-color: white; transition: all 0.3s ease;"
                               asp-action="Index"
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-keyword="@ViewData["Keyword"]"
                               asp-route-regionId="@ViewData["RegionId"]"
                               asp-route-status="@ViewData["Status"]">
                                <i class="fas fa-chevron-left text-primary"></i>
                            </a>
                        </li>

                        @* --- 頁碼按鈕 --- *@
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            bool isActive = (i == ViewBag.CurrentPage);
                            <li class="page-item @(isActive ? "active" : "")">
                                <a class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center fw-bold"
                                   style="width: 45px; height: 45px; transition: all 0.3s ease;
                                          @(isActive ? "background-color: #0d6efd; color: white;" : "background-color: white; color: #6c757d;")"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-keyword="@ViewData["Keyword"]"
                                   asp-route-regionId="@ViewData["RegionId"]"
                                   asp-route-status="@ViewData["Status"]">@i</a>
                            </li>
                        }

                        @* --- 下一頁 --- *@
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link border-0 rounded-circle shadow-sm d-flex align-items-center justify-content-center"
                               style="width: 45px; height: 45px; background-color: white; transition: all 0.3s ease;"
                               asp-action="Index"
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-keyword="@ViewData["Keyword"]"
                               asp-route-regionId="@ViewData["RegionId"]"
                               asp-route-status="@ViewData["Status"]">
                                <i class="fas fa-chevron-right text-primary"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
@section Scripts {
    @* 1. 先引入外部套件 (CDN) *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @* 2. 再執行你的判斷邏輯 *@
    <script>
        $(document).ready(function () {
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                               Swal.fire({
                title: '成功！',
                // 💡 使用 Html.Raw 確保中文字不被二次轉碼
                text: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                confirmButtonText: '確定',
                timer: 3000,
                timerProgressBar: true
            });
                    </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>
                    Swal.fire({
                        title: '錯誤！',
                        text: '@TempData["ErrorMessage"]',
                        icon: 'error',
                        confirmButtonText: '好'
                    });
                    </text>
            }
        });
             function openSchedule(id) {
            alert('正在開啟商品 ID: ' + id + ' 的檔期管理視窗');
        }
                function confirmDelete(id, name) {
            Swal.fire({
                title: '確定要刪除嗎？',
                text: `行程「${name}」刪除後將無法恢復，確定執行？`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e35d5d',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '是的，刪除它！',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    // 💡 找到對應 ID 的隱藏表單並送出
                    document.getElementById('delete-form-' + id).submit();
                }
            })
        }
    </script>
}