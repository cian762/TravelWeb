@model TravelWeb.Areas.Attractions.Models.AttractionProduct

@{
    ViewData["Title"] = "新增景點票券";
}

<h1>新增景點票券</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        @* 稍微加寬一點點比較好放 *@
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 1. 選擇景點 *@
            <div class="form-group mb-3">
                <label asp-for="AttractionId" class="control-label">所屬景點</label>
                <select asp-for="AttractionId" class="form-control" asp-items="ViewBag.AttractionList">
                    <option value="">-- 請選擇景點 --</option>
                </select>
                <span asp-validation-for="AttractionId" class="text-danger"></span>
            </div>

            @* 2. 產品代碼 *@
            <div class="form-group mb-3">
                <label asp-for="ProductCode" class="control-label">產品代碼</label>
                <input asp-for="ProductCode" class="form-control" placeholder="例如: TKT-101-001" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            @* 3. 標題 *@
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">票券名稱</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* 4. 價格 *@
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">售價</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @* 5. 是否啟用 (改用選單) *@
            <div class="form-group mb-3">
                <label asp-for="IsActive" class="control-label">狀態</label>
                <select asp-for="IsActive" class="form-control">
                    <option value="1">銷售中</option>
                    <option value="0">下架</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

          

            <div class="form-group mt-4">
                <input type="submit" value="確認儲存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">返回列表</a>
            </div>
        </form>
    </div>
</div>

