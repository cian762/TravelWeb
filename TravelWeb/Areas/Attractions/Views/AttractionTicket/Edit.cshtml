@model TravelWeb.Areas.Attractions.Models.AttractionProduct

@{
    ViewData["Title"] = "編輯景點票券";
}

@* 引入 Select2 CSS *@
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@1.5.2/dist/select2-bootstrap4.min.css" rel="stylesheet" />

<style>
    .custom-detail-area {
        border: 1px solid #dee2e6 !important;
        background-color: #fdfdfd;
        border-radius: 6px;
        padding: 15px;
    }

    .form-control.custom-textarea:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .1);
    }
    /* Select2 樣式微調 */
    .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice {
        background-color: #007bff;
        border-color: #006fe6;
        color: #fff;
    }
    /* 1. 隱藏 Select2 產生的多餘輔助文字 (解決那兩行字的問題) */
    .select2-search__field {
        margin-top: 0 !important;
    }

    /* 2. 修正 Select2 容器高度，防止點擊時重疊 */
    .select2-container--bootstrap4 .select2-selection--multiple {
        min-height: 40px !important; /* 強制最小高度 */
        border: 1px solid #ced4da !important;
        display: flex !important;
        align-items: center;
        flex-wrap: wrap;
    }

    /* 3. 移除 Select2 自動產生的偽元素提示 */
    .select2-container .select2-selection--multiple .select2-selection__rendered {
        display: flex !important;
        padding: 0 5px !important;
    }
    /* 解決 Select2 在多選模式下的顯示異常 */
    .select2-container {
        display: block;
    }

    .select2-container--bootstrap4 .select2-selection--multiple {
        min-height: calc(1.5em + 0.75rem + 2px) !important;
    }
</style>

<h1>編輯景點票券</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="CreatedAt" />

            @* 1. 選擇景點 *@
            <div class="form-group mb-3">
                <label asp-for="AttractionId" class="control-label">所屬景點</label>
                <select asp-for="AttractionId" class="form-control" asp-items="ViewBag.AttractionList">
                    <option value="">-- 請選擇景點 --</option>
                </select>
                <span asp-validation-for="AttractionId" class="text-danger"></span>
            </div>

            @* 2. 產品代碼 *@
            <div class="form-group mb-3">
                <label asp-for="ProductCode" class="control-label">產品代碼</label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            @* 3. 票券名稱 *@
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">票券名稱</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* 4. 票種 *@
            <div class="form-group mb-3">
                <label asp-for="TicketTypeCode" class="control-label">票種</label>
                <select asp-for="TicketTypeCode" class="form-control" asp-items="ViewBag.TicketTypeList">
                    <option value="">-- 請選擇票種 --</option>
                </select>
                <span asp-validation-for="TicketTypeCode" class="text-danger"></span>
            </div>

            @* 5. 價格 *@
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">售價</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @* 6. 最大購買數 *@
            <div class="form-group mb-3">
                <label asp-for="MaxPurchaseQuantity" class="control-label">單筆最大購買數量</label>
                <input asp-for="MaxPurchaseQuantity" type="number" class="form-control" min="1" />
            </div>

            @* 7. 票券狀態 *@
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">系統狀態</label>
                <select asp-for="Status" class="form-control">
                    <option value="DRAFT">草稿 (DRAFT)</option>
                    <option value="ACTIVE">已發佈 (ACTIVE)</option>
                    <option value="INACTIVE">暫時下架 (INACTIVE)</option>
                    <option value="ARCHIVED">封存 (ARCHIVED)</option>
                </select>
            </div>

            @* ★ 關鍵新增：標籤搜尋框 ★ *@
            <div class="form-group mb-4">
                <label class="control-label fw-bold"><i class="fas fa-tags me-1"></i> 產品標籤</label>
                <select id="TagIds" name="TagIds" class="form-control" multiple="multiple">
                    @if (ViewBag.CurrentTags != null)
                    {
                        foreach (var tag in ViewBag.CurrentTags)
                        {
                            <option value="@tag.Value" selected="selected">@tag.Text</option>
                        }
                    }
                </select>
                <small class="text-muted">請輸入關鍵字搜尋現有標籤（例如：2026）</small>
            </div>

            @* 票券詳細內容區塊 *@
            <div class="card mt-4 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">票券詳細內容</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">內容介紹</label>
                        <textarea name="AttractionProductDetail.ContentDetails" class="form-control" rows="5">@Model.AttractionProductDetail?.ContentDetails</textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">使用說明</label>
                        <textarea name="AttractionProductDetail.UsageInstructions" class="form-control" rows="5">@Model.AttractionProductDetail?.UsageInstructions</textarea>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold text-muted">內部備註</label>
                <input name="AttractionProductDetail.Notes" class="form-control form-control-sm"
                       value="@Model.AttractionProductDetail?.Notes" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">儲存變更</button>
                <a asp-action="Index" class="btn btn-outline-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            // ★ 只保留這一個 select2() 呼叫，刪掉原本那兩個 ★
            $('#TagIds').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: '輸入關鍵字搜尋或建立標籤...',
                allowClear: true,

                // 允許建立新標籤
                tags: true,
                createTag: function (params) {
                    var term = $.trim(params.term);
                    if (term === '') return null;
                    return {
                        id: 'NEW:' + term,
                        text: term,
                        newTag: true
                    };
                },

                        // 新增這段：選到新標籤時顯示「溫泉（新增）」給使用者看
        templateSelection: function (data) {
            if (data.newTag) {
                return data.text + '（新增）';
            }
            return data.text;
        },

                ajax: {
                    url: '@Url.Action("Search", "Tags", new { area = "Attractions" })',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) { return { term: params.term }; },
                    processResults: function (data) { return { results: data }; },
                    cache: true
                },
                minimumInputLength: 1
            });
        });
    </script>
}
