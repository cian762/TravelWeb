@model IEnumerable<TravelWeb.Areas.Attractions.Models.AttractionProduct>

@{
    ViewData["Title"] = "票券管理列表";
}

<div class="page-inner">
    @* --- 1. 頁面標題區 --- *@
    <div class="page-header">
        <h4 class="page-title">票券產品管理</h4>
        <ul class="breadcrumbs">
            <li class="nav-home"><a href="#"><i class="flaticon-home"></i></a></li>
            <li class="separator"><i class="flaticon-right-arrow"></i></li>
            <li class="nav-item"><a href="#">景點區</a></li>
            <li class="separator"><i class="flaticon-right-arrow"></i></li>
            <li class="nav-item"><a href="#">票券管理</a></li>
        </ul>
    </div>

    @* --- 2. 主要列表卡片 --- *@
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h4 class="card-title">票券列表</h4>
                    <a asp-area="Attractions" asp-controller="AttractionTicket" asp-action="Create" class="btn btn-primary btn-round ms-auto">
                        <i class="fa fa-plus"></i> 新增票券
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>產品代碼</th>
                                    <th>票券名稱</th>
                                    <th>所屬景點</th>
                                    <th>售價</th>
                                    <th>系統狀態</th>
                                    <th>銷售狀態 (點擊切換)</th>
                                    <th style="width: 15%">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><code class="text-primary">@item.ProductCode</code></td>
                                        <td><strong>@item.Title</strong></td>
                                        <td>@(item.Attraction?.Name ?? "未指定")</td>
                                        <td class="text-danger fw-bold">@item.Price?.ToString("C0")</td>
                                        <td><span class="badge badge-info">@(item.Status ?? "DRAFT")</span></td>
                                        <td>
                                            @* 修改點：改為按鈕觸發 toggleStatus *@
                                            @if (item.IsActive == 1)
                                            {
                                                <button type="button" class="btn btn-xs btn-success btn-round"
                                                        onclick="toggleStatus(@item.ProductId, 0, '@item.Title')">
                                                    銷售中
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-xs btn-secondary btn-round"
                                                        onclick="toggleStatus(@item.ProductId, 1, '@item.Title')">
                                                    已下架
                                                </button>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary" title="編輯">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="Inventory" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-info" title="庫存">
                                                    <i class="fas fa-boxes"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@item.ProductId, '@item.Title')" title="刪除">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                            @* 隱藏的刪除表單 *@
                                            <form id="delete-form-@item.ProductId" asp-action="Delete" asp-route-id="@item.ProductId" method="post" style="display:none;">
                                                @Html.AntiForgeryToken()
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- 3. 詳情 Modal --- *@
<div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">票券詳細資訊</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // --- 1. 刪除確認功能 ---
        function confirmDelete(id, name) {
            Swal.fire({
                title: '確定要刪除嗎？',
                text: '票券「' + name + '」刪除後將無法還原！',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: '是的，刪除它！',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.getElementById('delete-form-' + id);
                    if (form) form.submit();
                }
            })
        }

        // --- 2. 狀態切換功能 (AJAX 提交或模擬表單) ---
        function toggleStatus(id, newStatus, title) {
            const actionText = newStatus === 1 ? '上架' : '下架';
            const color = newStatus === 1 ? '#28a745' : '#6c757d';

            Swal.fire({
                title: `確定要${actionText}嗎？`,
                text: `票券「${title}」將變更為${actionText}狀態。`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: color,
                cancelButtonColor: '#3085d6',
                confirmButtonText: `是的，${actionText}！`,
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    // 建立動態表單提交，這樣不用改太多後端 API
                    const form = document.createElement('form');
                    form.method = 'POST';
                    // 請確保後端 Controller 有對應的 ToggleActive Action
                    form.action = '@Url.Action("ToggleActive", "AttractionTicket")';

                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    idInput.value = id;

                    const statusInput = document.createElement('input');
                    statusInput.type = 'hidden';
                    statusInput.name = 'isActive';
                    statusInput.value = newStatus;

                    form.appendChild(idInput);
                    form.appendChild(statusInput);
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        // --- 3. 成功訊息顯示 ---
        const successMsg = '@Html.Raw(TempData["SuccessMessage"])';
        if (successMsg && successMsg !== '') {
            Swal.fire({
                icon: 'success',
                title: '完成！',
                text: successMsg,
                timer: 2000,
                showConfirmButton: false
            });
        }
    </script>
}