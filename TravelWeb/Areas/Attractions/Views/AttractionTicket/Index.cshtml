@model IEnumerable<TravelWeb.Areas.Attractions.Models.AttractionProduct>

@{
    ViewData["Title"] = "景點票券管理 - 詳情整合版";
}

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">票券產品管理</h4>
        <ul class="breadcrumbs">
            <li class="nav-home"><a href="#"><i class="flaticon-home"></i></a></li>
            <li class="separator"><i class="flaticon-right-arrow"></i></li>
            <li class="nav-item">票券管理</li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h4 class="card-title">票券列表</h4>
                    <a asp-action="Create" class="btn btn-primary btn-round ms-auto">
                        <i class="fa fa-plus"></i> 新增票券
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>產品代碼</th>
                                    <th>票券名稱</th>
                                    <th>所屬景點</th>
                                    <th>售價</th>
                                    <th>每人限購</th>
                                    <th>系統狀態 (點擊切換)</th>
                                    <th>銷售狀態 (點擊切換)</th>
                                    <th style="width: 15%">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><code class="text-primary">@item.ProductCode</code></td>
                                        <td>
                                            <div class="fw-bold">@item.Title</div>
                                            <small class="text-muted">
                                                <i class="bi bi-tag"></i> @(item.TicketType?.TicketTypeName ?? "未分類")
                                            </small>
                                        </td>
                                        <td>@(item.Attraction?.Name ?? "未指定")</td>
                                        <td class="text-danger fw-bold">@item.Price?.ToString("C0")</td>
                                        <td>
                                            @if (item.MaxPurchaseQuantity > 0)
                                            {
                                                <span>@item.MaxPurchaseQuantity 張</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">無限制</span>
                                            }
                                        </td>

                                        <td>
                                            <button type="button" class="btn btn-xs btn-outline-info btn-round"
                                                    onclick="changeStatus(@item.ProductId, '@(item.Status?.ToUpper() ?? "DRAFT")', '@item.Title')">
                                                <i class="fas fa-sync-alt"></i> @(item.Status ?? "DRAFT")
                                            </button>
                                        </td>
                                        <td>
                                            @if (item.IsActive == 1)
                                            {
                                                <button type="button" class="btn btn-xs btn-success btn-round"
                                                        onclick="toggleActive(@item.ProductId, 0, '@item.Title')">
                                                    銷售中
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-xs btn-secondary btn-round"
                                                        onclick="toggleActive(@item.ProductId, 1, '@item.Title')">
                                                    已下架
                                                </button>

                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                @* 1. 編輯按鈕 *@
                                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary" title="編輯基本資料">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                @* 2. 檢視詳情按鈕 (原本的庫存按鈕改為眼睛圖示) *@
                                                <button type="button" class="btn btn-sm btn-outline-info"
                                                        onclick="showProductDetails(@item.ProductId)" title="查看內容詳情">
                                                    <i class="fas fa-eye"></i>
                                                </button>

                                                @* 3. 刪除按鈕 *@
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        onclick="confirmDelete(@item.ProductId, '@item.Title')" title="刪除票券">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                            <form id="delete-form-@item.ProductId" asp-action="Delete" asp-route-id="@item.ProductId" method="post" style="display:none;">
                                                @Html.AntiForgeryToken()
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- 內容詳情 Modal (彈窗) --- *@
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="detailsModalLabel"><i class="fas fa-info-circle me-2"></i>票券詳細內容</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="mb-4">
                    <h6 class="fw-bold text-info"><i class="fas fa-align-left me-2"></i>內容介紹</h6>
                    <div id="modalContentDetails" class="p-3 bg-light rounded border" style="min-height: 100px; white-space: pre-line;">
                    </div>
                </div>

                <div>
                    <h6 class="fw-bold text-info"><i class="fas fa-clipboard-list me-2"></i>使用說明</h6>
                    <div id="modalUsageInstructions" class="p-3 bg-light rounded border" style="min-height: 100px; white-space: pre-line;">
                    </div>
                </div>
                <div class="mt-3 p-2 bg-light border-start border-4 border-info">
                    <h6 class="fw-bold text-info"><i class="fas fa-sticky-note me-2"></i>內部備註</h6>
                    <div id="modalNotes" class="text-muted small"></div>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 封裝表單提交
        function quickPost(action, data) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = action;
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) form.appendChild(token.cloneNode());
            for (const key in data) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = key;
                input.value = data[key];
                form.appendChild(input);
            }
            document.body.appendChild(form);
            form.submit();
        }

         // --- 銷售狀態切換 (連動系統狀態) ---
        function toggleActive(id, newStatus, title) {
            // 根據傳入的 newStatus (0 或 1) 決定顯示文字
            const actionText = newStatus === 1 ? '上架' : '下架';
            const statusText = newStatus === 1 ? '銷售中' : '已下架';
            const iconType = newStatus === 1 ? 'success' : 'warning';

            Swal.fire({
                title: `確定要將「${title}」${actionText}嗎？`,
                text: `這將會同步將系統狀態更新為 ${newStatus === 1 ? 'ACTIVE' : 'DRAFT'}。`,
                icon: iconType,
                showCancelButton: true,
                confirmButtonColor: newStatus === 1 ? '#28a745' : '#6c757d',
                cancelButtonColor: '#d33',
                confirmButtonText: `是的，我要${actionText}！`,
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    // 使用你的 quickPost 函數發送資料
                    // 注意：這裡必須傳送 __RequestVerificationToken，因為後端有 [ValidateAntiForgeryToken]
                    const token = $('input[name="__RequestVerificationToken"]').val();

                    $.ajax({
                        url: '@Url.Action("ToggleActive", "AttractionTicket")',
                        type: 'POST',
                        data: {
                            id: id,
                            isActive: newStatus,
                            __RequestVerificationToken: token
                        },
                        success: function (response) {
                            // 因為你的 Controller 最後是 return RedirectToAction
                            // 這裡通常會接收到整個 Index 頁面的 HTML，或者你可以根據需求重新整理頁面
                            Swal.fire({
                                title: '更新成功！',
                                text: `票券已連動變更為${statusText}狀態。`,
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload(); // 重新整理頁面，看到最新的連動狀態
                            });
                        },
                        error: function (xhr) {
                            Swal.fire('錯誤', '狀態更新失敗，請稍後再試。', 'error');
                        }
                    });
                }
            });
        }

        // 2. 系統狀態切換
        function changeStatus(id, current, title) {
            Swal.fire({
                title: '變更系統狀態',
                text: `票券「${title}」目前狀態為：${current}`,
                input: 'select',
                inputOptions: {
                    'DRAFT': '草稿 (DRAFT)',
                    'ACTIVE': '已發佈 (ACTIVE)',
                    'INACTIVE': '已下架 (INACTIVE)',
                    'ARCHIVED': '封存 (ARCHIVED)'
                },
                inputValue: current.toUpperCase().trim(),
                showCancelButton: true,
                confirmButtonText: '確定更新'
            }).then((result) => {
                if (result.isConfirmed && result.value) {
                    quickPost('@Url.Action("UpdateStatus")', { id: id, status: result.value });
                }
            });
        }

        // 3. 刪除確認
        function confirmDelete(id, name) {
            Swal.fire({
                title: '確定刪除？',
                text: name,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }

        // 4. 取得詳情並顯示 Modal
        function showProductDetails(id) {
            // 使用 AJAX 向後端請求 API (等一下要在 Controller 寫這段)
            $.ajax({
                url: '@Url.Action("GetDetails")/' + id,
                type: 'GET',
                success: function (data) {
                    $('#modalContentDetails').text(data.contentDetails || '暫無詳細內容介紹');
                    $('#modalUsageInstructions').text(data.usageInstructions || '暫無相關使用說明');
                    // --- 補上這行 ---
                    $('#modalNotes').text(data.notes || "無內部備註");
                    $('#detailsModal').modal('show');
                },
                error: function () {
                    Swal.fire('錯誤', '無法載入詳情資訊', 'error');
                }
            });
        }

        // 5. 成功訊息
        const successMsg = '@Html.Raw(TempData["SuccessMessage"])';
        if (successMsg) {
            Swal.fire({ icon: 'success', title: '完成', text: successMsg, timer: 2000, showConfirmButton: false });
        }
    </script>
}