@model TravelWeb.Areas.Attractions.Models.Attraction

@{
    ViewData["Title"] = "新增景點";
}

<style>
    /* 之前的 Footer 隱藏與墊高邏輯保持 */
    footer, .footer, .main-footer, [class*="footer"] {
        display: none !important;
    }

    .page-inner {
        min-height: 100vh !important;
        padding-bottom: 80px !important;
    }

    .section-box {
        border: 1px solid #ebedf2;
        padding: 20px;
        border-radius: 5px;
        background-color: #fafafa;
        margin-bottom: 20px;
    }

    .section-title {
        font-weight: bold;
        color: #1a2035;
        margin-bottom: 15px;
        display: block;
        border-left: 4px solid #31ce36;
        padding-left: 10px;
    }


    .btn-check:checked + .btn-outline-primary {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .cursor-pointer {
        cursor: pointer;
    }



</style>

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">新增景點</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="section-box">
                            <span class="section-title">基本資訊</span>
                            <div class="form-group">
                                <label asp-for="Name">景點名稱 <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="例如：台北 101" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">地址</label>
                                <input asp-for="Address" class="form-control" placeholder="請輸入完整地址" />
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Phone">聯絡電話</label>
                                    <input asp-for="Phone" class="form-control" placeholder="02-xxxx-xxxx" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Website">官方網站</label>
                                    <input asp-for="Website" class="form-control" placeholder="https://..." />
                                </div>
                            </div>
                        </div>

                        <div class="section-box">
                            <span class="section-title">地理位置設定</span>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>區域 (大範圍)</label>
                                    <select id="ddlArea" class="form-control">
                                        <option value="">-- 請選擇區域 --</option>
                                        @if (ViewBag.RegionList != null)
                                        {
                                            foreach (var item in (SelectList)ViewBag.RegionList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>縣市</label>
                                    <select id="ddlCity" class="form-control" disabled>
                                        <option value="">-- 請選擇縣市 --</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="RegionId">行政區 (必填)</label>
                                    <select asp-for="RegionId" id="ddlDistrict" class="form-control" disabled>
                                        <option value="">-- 請選擇行政區 --</option>
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="control-label fw-bold mb-2">景點標籤類別</label>
                                <div class="card shadow-sm border-0 bg-light">
                                    <div class="card-body">
                                        <div class="d-flex flex-wrap gap-2">
                                            @{
                                                // 1. 安全地從 ViewBag 取出資料並轉型
                                                var categoryList = ViewBag.Categories as IEnumerable<TravelWeb.Areas.Attractions.Models.AttractionTypeCategory>;
                                            }

                                            @if (categoryList != null && categoryList.Any())
                                            {
                                                foreach (var cat in categoryList)
                                                {
                                                    // 2. 這裡使用 label 搭配 hidden checkbox 做出按鈕感
                                                    <div class="tag-item">
                                                        <input type="checkbox" class="btn-check" name="selectedCategoryIds"
                                                               value="@cat.AttractionTypeId" id="cat_@cat.AttractionTypeId" autocomplete="off">
                                                        <label class="btn btn-outline-primary rounded-pill px-3 shadow-sm bg-white" for="cat_@cat.AttractionTypeId">
                                                            #@cat.AttractionTypeName
                                                        </label>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="text-muted p-2">
                                                    <i class="fas fa-exclamation-circle me-1"></i> 資料庫中尚未建立任何標籤類別。
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                       
                            

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Latitude">緯度 (Latitude)</label>
                                    <input asp-for="Latitude"
                                           type="number"
                                           step="any"
                                           class="form-control"
                                           placeholder="例如：25.033976" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Longitude">經度 (Longitude)</label>
                                    <input asp-for="Longitude"
                                           type="number"
                                           step="any"
                                           class="form-control"
                                           placeholder="例如：121.564660" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>


                        <div class="section-box">
                            <span class="section-title">營運詳細資訊</span>
                            <div class="form-group">
                                <label asp-for="BusinessHours">營業時間</label>
                                <textarea asp-for="BusinessHours" class="form-control" rows="3" placeholder="週一至週五 09:00 - 18:00"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClosedDaysNote">公休日說明</label>
                                <input asp-for="ClosedDaysNote" class="form-control" placeholder="例如：每週一公休" />
                            </div>
                            <div class="form-group">
                                <label asp-for="TransportInfo">交通資訊</label>
                                <textarea asp-for="TransportInfo" class="form-control" rows="3" placeholder="捷運站出口、公車路線等"></textarea>
                            </div>
                        </div>
                    </div>
                        <div class="card-body">
                            <div class="section-box">
                                <span class="section-title">圖片管理</span>
                                <div class="form-group">
                                    <label>上傳景點照片 (可多選)</label>
                                    <input type="file" name="imageFiles" class="form-control" multiple accept="image/*" />
                                    <small class="form-text text-muted">支援 jpg, png, webp 格式</small>
                                </div>
                                <div id="imagePreview" class="mt-3 d-flex flex-wrap" style="gap: 10px;"></div>
                            </div>
                        </div>
                    <div class="card-action text-right">
                        <button type="submit" class="btn btn-success">確認儲存景點</button>
                        <a asp-action="Index" class="btn btn-danger">取消</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* 加入之前的 jQuery 連動 JS 邏輯 *@
    <script>
        $(document).ready(function () {
            $('#ddlArea').change(function () {
                var areaId = $(this).val();
                resetSelect('#ddlCity', '-- 請選擇縣市 --');
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');
                if (areaId) {
                    $.getJSON('@Url.Action("GetSubRegions")', { parentId: areaId }, function (data) {
                        updateSelect('#ddlCity', data);
                    });
                }
            });

            $('#ddlCity').change(function () {
                var cityId = $(this).val();
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');
                if (cityId) {
                    $.getJSON('@Url.Action("GetSubRegions")', { parentId: cityId }, function (data) {
                        updateSelect('#ddlDistrict', data);
                    });
                }
            });

            function updateSelect(selector, data) {
                var $el = $(selector);
                $el.prop('disabled', false);
                $.each(data, function (i, item) {
                    $el.append($('<option>', { value: item.id, text: item.name }));
                });
            }

            function resetSelect(selector, defaultText) {
                $(selector).empty().append($('<option>', { value: '', text: defaultText })).prop('disabled', true);
            }
        });

                $('#imgInput').change(function() {
            var preview = $('#imagePreview');
            preview.empty();
            if (this.files) {
                $.each(this.files, function(i, file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        preview.append('<img src="' + e.target.result + '" style="width:100px; height:100px; object-fit:cover; border-radius:5px; border:1px solid #ddd;">');
                    }
                    reader.readAsDataURL(file);
                });
            }
        });
    </script>
}