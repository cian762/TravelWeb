@model TravelWeb.Areas.Attractions.Models.Attraction

@{
    ViewData["Title"] = "編輯景點";
}

<style>
    footer, .footer, .main-footer, [class*="footer"] {
        display: none !important;
    }

    .page-inner {
        min-height: 100vh !important;
        padding-bottom: 80px !important;
    }

    .section-box {
        border: 1px solid #ebedf2;
        padding: 20px;
        border-radius: 5px;
        background-color: #fafafa;
        margin-bottom: 20px;
    }

    .section-title {
        font-weight: bold;
        color: #1a2035;
        margin-bottom: 15px;
        display: block;
        border-left: 4px solid #177dff;
        padding-left: 10px;
    }

    select.form-control:not(:disabled) {
        background-color: #ffffff !important;
        cursor: pointer;
    }
    /* 圖片預覽樣式 */
    .img-manage-wrapper {
        position: relative;
        display: inline-block;
        margin: 10px;
    }

        .img-manage-wrapper img {
            width: 150px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

    .img-remove-btn {
        position: absolute;
        top: -5px;
        right: -5px;
        background: #f25961;
        color: white;
        border-radius: 50%;
        width: 22px;
        height: 22px;
        line-height: 20px;
        text-align: center;
        cursor: pointer;
        font-size: 12px;
        border: none;
    }

  
    .btn-check:checked + .btn-outline-primary {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .cursor-pointer {
        cursor: pointer;
    }



</style>

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">編輯景點 - @Model.Name</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="AttractionId" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="ApprovalStatus" />

                        <div class="section-box">
                            <span class="section-title">基本資訊</span>
                            <div class="form-group">
                                <label asp-for="Name">景點名稱 <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="例如：台北 101" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">地址</label>
                                <input asp-for="Address" class="form-control" placeholder="請輸入完整地址" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Phone">聯絡電話</label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Website">官方網站</label>
                                    <input asp-for="Website" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="section-box">
                            <span class="section-title">地理位置設定</span>
                            <p class="small text-muted mb-3">若需修改行政區，請重新由左至右選擇。目前行政區 ID: @Model.RegionId</p>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>區域 (大範圍)</label>
                                    <select id="ddlArea" class="form-control">
                                        <option value="">-- 請選擇區域 --</option>
                                        @if (ViewBag.RegionList != null)
                                        {
                                            foreach (var item in (SelectList)ViewBag.RegionList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>縣市</label>
                                    <select id="ddlCity" class="form-control">
                                        <option value="">-- 請選擇縣市 --</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="RegionId">行政區 (必填)</label>
                                    <select asp-for="RegionId" id="ddlDistrict" class="form-control">
                                        <option value="">-- 請選擇行政區 --</option>
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="control-label fw-bold mb-2">景點標籤類別</label>
                                <div class="alert alert-warning py-2 small">
                                    <i class="fas fa-info-circle me-1"></i> 編輯模式下，請重新勾選此景點需要的標籤。
                                </div>
                                <div class="card shadow-sm border-0 bg-light">
                                    <div class="card-body">
                                        <div class="d-flex flex-wrap gap-2">
                                            @{
                                                // 1. 安全地從 ViewBag 取出資料並轉型
                                                var categoryList = ViewBag.Categories as IEnumerable<TravelWeb.Areas.Attractions.Models.AttractionTypeCategory>;
                                            }

                                            @if (categoryList != null && categoryList.Any())
                                            {
                                                foreach (var cat in categoryList)
                                                {
                                                    // 2. 這裡使用 label 搭配 hidden checkbox 做出按鈕感
                                                    <div class="tag-item">
                                                        <input type="checkbox" class="btn-check" name="selectedCategoryIds"
                                                               value="@cat.AttractionTypeId" id="cat_@cat.AttractionTypeId" autocomplete="off">
                                                        <label class="btn btn-outline-primary rounded-pill px-3 shadow-sm bg-white cursor-pointer" for="cat_@cat.AttractionTypeId">
                                                            #@cat.AttractionTypeName
                                                        </label>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="text-muted p-2">
                                                    <i class="fas fa-exclamation-circle me-1"></i> 資料庫中尚未建立任何標籤類別。
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>





                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Latitude">緯度 (Latitude)</label>
                                    <input asp-for="Latitude" type="number" step="any" class="form-control" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Longitude">經度 (Longitude)</label>
                                    <input asp-for="Longitude" type="number" step="any" class="form-control" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="section-box">
                            <span class="section-title">營運詳細資訊</span>
                            <div class="form-group">
                                <label asp-for="BusinessHours">營業時間</label>
                                <textarea asp-for="BusinessHours" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClosedDaysNote">公休日說明</label>
                                <input asp-for="ClosedDaysNote" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="TransportInfo">交通資訊</label>
                                <textarea asp-for="TransportInfo" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="section-box">
                        <span class="section-title">圖片管理</span>
                        <div class="form-group">
                            <label>上傳新照片 (可多選)</label>
                            <input type="file" name="imageFiles" class="form-control" multiple accept="image/*" />
                            <small class="form-text text-muted">支援 jpg, png, webp 等格式。</small>
                        </div>

                        <div id="existing-images" class="mt-3">
                            <label>現有圖片：</label>
                            <div class="d-flex flex-wrap">
                                @if (Model.Images != null && Model.Images.Any())
                                {
                                    foreach (var img in Model.Images)
                                    {
                                        <div class="img-manage-wrapper" id="img-container-@img.ImageId">
                                            <img src="@img.ImagePath" />
                                            <button type="button" class="img-remove-btn" onclick="deleteImage(@img.ImageId)">&times;</button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted p-2">目前尚無圖片</p>
                                }
                            </div>
                        </div>
                    </div>



                    <div class="card-action text-right">
                        <button type="submit" class="btn btn-primary">儲存修改</button>
                        <a asp-action="Index" class="btn btn-black">取消返回</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // 刪除圖片的 Ajax
        function deleteImage(imageId) {
            if (confirm('確定要刪除這張圖片嗎？檔案將會從伺服器移除。')) {
                $.ajax({
                    url: '@Url.Action("DeleteImage")',
                    type: 'POST',
                    data: {
                        id: imageId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        if (result.success) {
                            $(`#img-container-${imageId}`).fadeOut(300, function() { $(this).remove(); });
                        } else {
                            alert('刪除失敗：' + result.message);
                        }
                    }
                });
            }
        }




        $(document).ready(function () {
            // 區域連動
            $('#ddlArea').on('change', function () {
                var areaId = $(this).val();
                resetSelect('#ddlCity', '-- 請選擇縣市 --');
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');

                if (areaId) {
                    $.ajax({
                        url: '@Url.Action("GetSubRegions")',
                        type: 'GET',
                        data: { parentId: areaId },
                        success: function (data) {
                            updateSelect('#ddlCity', data, '-- 請選擇縣市 --');
                        }
                    });
                }
            });

            // 縣市連動
            $('#ddlCity').on('change', function () {
                var cityId = $(this).val();
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');

                if (cityId) {
                    $.ajax({
                        url: '@Url.Action("GetSubRegions")',
                        type: 'GET',
                        data: { parentId: cityId },
                        success: function (data) {
                            updateSelect('#ddlDistrict', data, '-- 請選擇行政區 --');
                        }
                    });
                }
            });

            function updateSelect(selector, data, defaultText) {
                var $el = $(selector);
                $el.empty().append($('<option>', { value: '', text: defaultText }));
                $.each(data, function (i, item) {
                    $el.append($('<option>', { value: item.id, text: item.name }));
                });
            }

            function resetSelect(selector, defaultText) {
                $(selector).empty().append($('<option>', { value: '', text: defaultText }));
            }
        });
    </script>
}

