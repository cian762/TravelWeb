@model TravelWeb.Areas.Attractions.Models.Attraction

@{
    ViewData["Title"] = "編輯景點";
}

<style>
    /* 隱藏 Footer 邏輯 */
    footer, .footer, .main-footer, [class*="footer"] {
        display: none !important;
    }

    .page-inner {
        min-height: 100vh !important;
        padding-bottom: 80px !important;
    }

    .section-box {
        border: 1px solid #ebedf2;
        padding: 20px;
        border-radius: 5px;
        background-color: #fafafa;
        margin-bottom: 20px;
    }

    .section-title {
        font-weight: bold;
        color: #1a2035;
        margin-bottom: 15px;
        display: block;
        border-left: 4px solid #177dff;
        padding-left: 10px;
    }

    /* 確保選單可以點選的視覺提示 */
    select.form-control:not(:disabled) {
        background-color: #ffffff !important;
        cursor: pointer;
    }
</style>

<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">編輯景點 - @Model.Name</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="AttractionId" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="ApprovalStatus" />

                        <div class="section-box">
                            <span class="section-title">基本資訊</span>
                            <div class="form-group">
                                <label asp-for="Name">景點名稱 <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="例如：台北 101" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">地址</label>
                                <input asp-for="Address" class="form-control" placeholder="請輸入完整地址" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Phone">聯絡電話</label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Website">官方網站</label>
                                    <input asp-for="Website" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="section-box">
                            <span class="section-title">地理位置設定</span>
                            <p class="small text-muted mb-3">若需修改行政區，請重新由左至右選擇。目前行政區 ID: @Model.RegionId</p>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>區域 (大範圍)</label>
                                    <select id="ddlArea" class="form-control">
                                        <option value="">-- 請選擇區域 --</option>
                                        @if (ViewBag.RegionList != null)
                                        {
                                            foreach (var item in (SelectList)ViewBag.RegionList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>縣市</label>
                                    <select id="ddlCity" class="form-control">
                                        <option value="">-- 請選擇縣市 --</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label asp-for="RegionId">行政區 (必填)</label>
                                    <select asp-for="RegionId" id="ddlDistrict" class="form-control">
                                        <option value="">-- 請選擇行政區 --</option>
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Latitude">緯度 (Latitude)</label>
                                    <input asp-for="Latitude" type="number" step="any" class="form-control" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Longitude">經度 (Longitude)</label>
                                    <input asp-for="Longitude" type="number" step="any" class="form-control" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="section-box">
                            <span class="section-title">營運詳細資訊</span>
                            <div class="form-group">
                                <label asp-for="BusinessHours">營業時間</label>
                                <textarea asp-for="BusinessHours" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClosedDaysNote">公休日說明</label>
                                <input asp-for="ClosedDaysNote" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="TransportInfo">交通資訊</label>
                                <textarea asp-for="TransportInfo" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="card-action text-right">
                        <button type="submit" class="btn btn-primary">儲存修改</button>
                        <a asp-action="Index" class="btn btn-black">取消返回</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // 區域連動
            $('#ddlArea').on('change', function () {
                var areaId = $(this).val();
                resetSelect('#ddlCity', '-- 請選擇縣市 --');
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');

                if (areaId) {
                    $.ajax({
                        url: '@Url.Action("GetSubRegions")',
                        type: 'GET',
                        data: { parentId: areaId },
                        success: function (data) {
                            updateSelect('#ddlCity', data, '-- 請選擇縣市 --');
                        }
                    });
                }
            });

            // 縣市連動
            $('#ddlCity').on('change', function () {
                var cityId = $(this).val();
                resetSelect('#ddlDistrict', '-- 請選擇行政區 --');

                if (cityId) {
                    $.ajax({
                        url: '@Url.Action("GetSubRegions")',
                        type: 'GET',
                        data: { parentId: cityId },
                        success: function (data) {
                            updateSelect('#ddlDistrict', data, '-- 請選擇行政區 --');
                        }
                    });
                }
            });

            function updateSelect(selector, data, defaultText) {
                var $el = $(selector);
                $el.empty().append($('<option>', { value: '', text: defaultText }));
                $.each(data, function (i, item) {
                    $el.append($('<option>', { value: item.id, text: item.name }));
                });
            }

            function resetSelect(selector, defaultText) {
                $(selector).empty().append($('<option>', { value: '', text: defaultText }));
            }
        });
    </script>
}

