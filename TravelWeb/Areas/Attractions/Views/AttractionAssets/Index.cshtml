@* 告訴網頁，我們要接收的是一組「景點 (Attraction)」的清單 *@
@model IEnumerable<TravelWeb.Areas.Attractions.Models.Attraction>

@{
    ViewData["Title"] = "景點列表";
}


<div class="page-inner">
    <div class="page-header">
        <h4 class="page-title">景點管理</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="#"><i class="flaticon-home"></i></a>
            </li>
            <li class="separator"><i class="flaticon-right-arrow"></i></li>
            <li class="nav-item"><a href="#">景點區</a></li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">景點列表</h4>
                        @* <button class="btn btn-primary btn-round ms-auto"> *@
                        <a asp-area="Attractions" asp-controller="AttractionAssets" asp-action="Create" class="btn btn-primary btn-round ms-auto">
                                <i class="fa fa-plus"></i> 新增景點
                            </a>
                        @* </button> *@
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mt-3">
                            <thead class="table-dark">
                                <tr>
                                    <th>編號</th>
                                    <th>景點名稱</th>
                                    <th>地址</th>
                                    <th>電話</th>
                                    <th>狀態</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @* 注意：這裡的屬性名稱請對照你的 Attraction.cs *@
                                        <td>@item.AttractionId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            @if (item.ApprovalStatus == 1)
                                            {
                                                <span class="badge badge-success">已核准</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">審核中</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="form-button-action">
                                                <button type="button" class="btn btn-link btn-primary btn-lg" title="編輯">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-link btn-danger" title="刪除">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>