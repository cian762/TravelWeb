@model TravelWeb.Areas.Activity.Models.ViewModels.ActivityEditViewModel

@{

    ViewData["Title"] = "活動編輯 | " + Model.Title;
}


@section Styles{

    <style>
        .thumb-wrapper {
            transition: 0.3s;
            opacity: 0.6;
            border: 2px solid transparent !important;
        }


        .active-thumb {
            opacity: 1;
            border-color: #0d6efd !important;
        }
    </style>

}



@section Scripts
{
    <script>
        // 儲存所有「新選取」的檔案 (File 物件)
            let newUploadFiles = [];

            // --- 處理新照片選取 (累加功能) ---
            document.getElementById('formFileMultiple').addEventListener('change', function (event) {
                const container = document.getElementById('previewContainer');
                const mainImg = document.getElementById('mainImg');
                const files = Array.from(event.target.files);

                files.forEach(file => {
                    // 避免重複加入
                    if (newUploadFiles.some(f => f.name === file.name && f.size === file.size)) return;

                    newUploadFiles.push(file);
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        const imgSrc = e.target.result;

                        // 建立縮圖容器 (加上 bg-warning 橘色背景區分新圖)
                        const thumbDiv = document.createElement('div');
                        thumbDiv.className = 'thumb-wrapper border bg-warning rounded-2 p-1 d-flex flex-column';
                        thumbDiv.onclick = function() { changeImage(this, imgSrc); };

                        const img = document.createElement('img');
                        img.src = imgSrc;
                        img.style.cssText = 'width: 120px; height: 120px; object-fit: contain; pointer-events: none;';

                        const btn = document.createElement('button');
                        btn.textContent = '移除';
                        btn.type = 'button';
                        btn.className = 'btn btn-danger btn-sm mt-1';

                        btn.onclick = function (e) {
                            e.stopPropagation();
                            newUploadFiles = newUploadFiles.filter(f => f !== file);
                            syncInputFiles(); // 同步回原生 input
                            thumbDiv.remove();
                            resetMainImage();
                        };

                        thumbDiv.appendChild(img);
                        thumbDiv.appendChild(btn);
                        container.appendChild(thumbDiv);
                    };
                    reader.readAsDataURL(file);
                });
                syncInputFiles();
            });

            // 將陣列同步到原生 Input 檔案清單的關鍵
            function syncInputFiles() {
                const dt = new DataTransfer();
                newUploadFiles.forEach(f => dt.items.add(f));
                document.getElementById('formFileMultiple').files = dt.files;
            }

            // --- 處理既有照片的移除 ---
            function removeExistingImage(element, url) {
                if(confirm("確定要移除這張現有的照片嗎？")) {
                    // 1. 建立隱藏欄位，name 屬性必須與後端 ViewModel 的屬性對應
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'DeletedUrls'; // 後端接收用的名稱
                    input.value = url;
                    document.getElementById('deletedImagesContainer').appendChild(input);

                    // 2. 移除畫面上的元素
                    element.closest('.thumb-wrapper').remove();
                    resetMainImage();
                }
            }

            // --- 通用工具函數 ---
            function changeImage(element, newSrc) {
                document.getElementById('mainImg').src = newSrc;
                document.querySelectorAll('.thumb-wrapper').forEach(el => el.classList.remove('active-thumb'));
                element.classList.add('active-thumb');
            }

            function resetMainImage() {
                const firstThumb = document.querySelector('.thumb-wrapper img');
                if (firstThumb) {
                    document.getElementById('mainImg').src = firstThumb.src;
                } else {
                    document.getElementById('mainImg').src = "";
                }
            }
    </script>

}










<section class="container my-2">
    <h1>活動編輯</h1>
    <div class="row d-flex align-items-stretch">

        @* 圖片區塊 *@
        <div class="col-4">
            <div class="d-flex flex-column h-100">
                <div class="border rounded-3 shadow-sm bg-white mb-3 overflow-hidden"
                     style="height: 800px; flex-shrink: 0;">
                    
                    @if (Model.ImgUrls != null && Model.ImgUrls.Count > 0)
                    {
                        <img id="mainImg" src="@Model.ImgUrls[0]"
                        class="w-100 h-100"
                        style="object-fit: contain; background-color: #f8f9fa;">
                    }
                    else
                    {
                        <img id="mainImg"
                             class="w-100 h-100"
                             style="object-fit: contain; background-color: #f8f9fa;">
                    }
                </div>
                <div id="previewContainer" class="d-flex justify-content-start gap-2 overflow-auto  border rounded-3 shadow-sm bg-white" style="height: 150px; flex-shrink: 0;">
                    @for (int i = 0; i < Model.ImgUrls?.Count; i++)
                    {
                        var img = Model.ImgUrls[i];
                        <div class="thumb-wrapper border rounded-2 p-1 d-flex flex-column @(i == 0 ? "active-thumb" : "")"
                             onclick="changeImage(this, '@img')">
                            <img src="@img" style="width: 120px; height: 120px; object-fit: contain; pointer-events: none;">

                            @* 既有圖片移除 *@
                            <button type="button" class="btn btn-danger btn-sm mt-1"
                                    onclick="event.stopPropagation(); removeExistingImage(this, '@img')">
                                移除
                            </button>
                        </div>
                    }
                </div>

            </div>
        </div>
       
        @* 表單區塊 *@
        <div class="col-8">
            <form method="post" class="p-4 border rounded-3 shadow-sm h-100 bg-light d-flex flex-column justify-content-between" enctype="multipart/form-data" asp-action="ActivityEdit" asp-route-id="@Model.ActivityId">
                <input type="hidden" asp-for="ActivityId">
                <div id="deletedImagesContainer"></div>
                
                <div class="form-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Title">活動名稱</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="StartTime">開始時間</label>
                            <input type="date" class="form-control" asp-for="StartTime">
                            <span class="text-danger" asp-validation-for="StartTime"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="EndTime">結束時間</label>
                            <input type="date" class="form-control" asp-for="EndTime">
                            <span class="text-danger" asp-validation-for="EndTime"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 ">
                            <label class="form-label fw-bold fs-3">區域標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Region)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="RegionName"
                                               value="@item"
                                               id="reg_@item"
                                               @(Model.RegionName != null && Model.RegionName.Contains(item) ? "checked" : "")>
                                        <label class="form-check-label" for="reg_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>
                            <span class="text-danger" asp-validation-for="RegionName"></span>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold fs-3">類型標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Type)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="TypeName"
                                               value="@item"
                                               id="type_@item"
                                               @(Model.TypeName != null && Model.TypeName.Contains(item) ? "checked" : "")>
                                        
                                        <label class="form-check-label" for="type_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>
                            <span class="text-danger" asp-validation-for="TypeName"></span>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Address"></label>
                        <input type="text" class="form-control" asp-for="Address">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="OfficialLink"></label>
                        <input type="text" class="form-control text-primary" asp-for="OfficialLink">
                        <span class="text-danger" asp-validation-for="OfficialLink"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label fw-bold fs-3" name="images">相關照片</label>
                        <input class="form-control" type="file" id="formFileMultiple" name="images" accept=".jpg, .jpeg, .png, .webp" multiple>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold">儲存變更</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Activity" asp-controller="Activity" asp-action="Index" class="btn btn-warning btn-lg w-100 text-light fw-bold">取消變更</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

      
</section>
