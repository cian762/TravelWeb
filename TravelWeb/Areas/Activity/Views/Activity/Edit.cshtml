@model TravelWeb.Areas.Activity.Models.ViewModels.ActivityEditViewModel




<style>
    .thumb-wrapper {
        transition: 0.3s;
        opacity: 0.6;
        border: 2px solid transparent !important;
    }

        .thumb-wrapper:hover {
            opacity: 1;
            border-color: #0d6efd !important;
        }

    .active-thumb {
        opacity: 1;
        border-color: #0d6efd !important;
    }
</style>



<section class="container my-2">
    <h1>活動編輯</h1>
    <div class="row d-flex align-items-stretch">
        <div class="col-6">
            <div class="d-flex flex-column h-100">
                <div class="border rounded-3 shadow-sm bg-white mb-3 overflow-hidden"
                     style="height: 800px; flex-shrink: 0;">
                    <img id="mainImg" src="~/Img/pngtree-beautiful-summer-mountain-river-nature-scenery-wallpaper-ai-image-image_16196332.jpg"
                         class="w-100 h-100"
                         style="object-fit: contain; background-color: #f8f9fa;">
                </div>

                <div class="d-flex justify-content-start gap-2 overflow-auto  border rounded-3 shadow-sm bg-white" style="height: 150px; flex-shrink: 0;">
                    <div class="thumb-wrapper border rounded-2 p-1 active-thumb" onclick="changeImage(this, '/Img/VpwLZZg.png')">
                        <img src="~/Img/VpwLZZg.png" style="width: 120px; height: 120px; object-fit: cover;">
                    </div>
                    <div class="thumb-wrapper border rounded-2 p-1 active-thumb" onclick="changeImage(this, '/Img/pngtree-beautiful-summer-mountain-river-nature-scenery-wallpaper-ai-image-image_16196332.jpg')">
                        <img src="~/Img/pngtree-beautiful-summer-mountain-river-nature-scenery-wallpaper-ai-image-image_16196332.jpg" style="width: 120px; height: 120px; object-fit: cover;">
                    </div>

                </div>


            </div>
        </div>
       

        <div class="col-6">
            <form method="post" class="p-4 border rounded-3 shadow-sm h-100 bg-light d-flex flex-column justify-content-between" enctype="multipart/form-data" asp-action="ActivityEdit">
                <input type="hidden" asp-for="@Model.ActivityInfo.ActivityId">

                <div class="form-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.Title">活動名稱</label>
                        <input type="text" class="form-control" asp-for="@Model.ActivityInfo.Title">
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.StartTime">開始時間</label>
                            <input type="date" class="form-control" asp-for="@Model.ActivityInfo.StartTime">
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.EndTime">結束時間</label>
                            <input type="date" class="form-control" asp-for="@Model.ActivityInfo.EndTime">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 ">
                            <label class="form-label fw-bold fs-3">區域標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Region)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="RegoinName"
                                               value="@item"
                                               id="reg_@item"
                                               @(Model.RegoinName != null && Model.RegoinName.Contains(item) ? "checked" : "")>
                                        <label class="form-check-label" for="reg_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>



                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold fs-3">類型標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Type)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="TypeName"
                                               value="@item"
                                               id="type_@item"
                                               @(Model.TypeName != null && Model.TypeName.Contains(item) ? "checked" : "")>
                                        
                                        <label class="form-check-label" for="type_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.Address">活動地點</label>
                        <input type="text" class="form-control" asp-for="@Model.ActivityInfo.Address">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.OfficialLink">官方連結</label>
                        <input type="text" class="form-control text-primary" asp-for="@Model.ActivityInfo.OfficialLink">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="@Model.ActivityInfo.Description">活動描述</label>
                        <textarea class="form-control" asp-for="@Model.ActivityInfo.Description" rows="5"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label fw-bold fs-3">選擇照片</label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-lg w-100">儲存變更</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Activity" asp-controller="Activity" asp-action="Index" class="btn btn-warning btn-lg w-100">取消變更</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

      
</section>
<script>
    function changeImage(element, newSrc) {
        // 1. 更換主圖路徑
        document.getElementById('mainImg').src = newSrc;

        // 2. 移除所有縮圖的選取狀態
        document.querySelectorAll('.thumb-wrapper').forEach(el => {
            el.classList.remove('active-thumb');
        });

        // 3. 幫點擊的縮圖加上選取狀態
        element.classList.add('active-thumb');
    }
</script>
