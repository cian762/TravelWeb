@model TravelWeb.Areas.Activity.Models.EFModel.Activity



<style>
    .thumb-wrapper {
        transition: 0.3s;
        opacity: 0.6;
        border: 2px solid transparent !important;
    }

        .thumb-wrapper:hover {
            opacity: 1;
            border-color: #0d6efd !important;
        }

    .active-thumb {
        opacity: 1;
        border-color: #0d6efd !important;
    }
</style>



<section class="container my-2">
    <h1>活動編輯</h1>
    <div class="row d-flex align-items-stretch">
        <div class="col-6">
            <div class="d-flex flex-column h-100">
                <div class="border rounded-3 shadow-sm bg-white mb-3 overflow-hidden"
                     style="height: 520px; flex-shrink: 0;">
                    <img id="mainImg" src="~/Img/VpwLZZg.png"
                         class="w-100 h-100"
                         style="object-fit: contain; background-color: #f8f9fa;">
                </div>

                <div class="d-flex justify-content-start gap-2 overflow-auto mb-3 border rounded-3 shadow-sm bg-white" style="height: 90px; flex-shrink: 0;">
                    <div class="thumb-wrapper border rounded-2 p-1 active-thumb" onclick="changeImage(this, '/Img/VpwLZZg.png')">
                        <img src="~/Img/VpwLZZg.png" style="width: 70px; height: 70px; object-fit: cover;">
                    </div>
                    <div class="thumb-wrapper border rounded-2 p-1 active-thumb" onclick="changeImage(this, '/Img/VpwLZZg.png')">
                        <img src="~/Img/VpwLZZg.png" style="width: 70px; height: 70px; object-fit: cover;">
                    </div>                   
                    <div class="thumb-wrapper border rounded-2 p-1 active-thumb" onclick="changeImage(this, '/Img/VpwLZZg.png')">
                        <img src="" style="width: 70px; height: 70px; object-fit: cover;">
                    </div>
                </div>

                <div class="row d-flex justify-content-between flex-grow-1 mt-2 mx-1">
                    <div class="col-5 border rounded-3 shadow-sm bg-white mb-2 p-3">
                        <label class="fw-bold border-bottom w-100 mb-2 fs-3">區域標籤</label>
                    </div>
                    <div class="col-5 border rounded-3 shadow-sm bg-white mb-2 p-3">
                        <label class="fw-bold border-bottom w-100 mb-2 fs-3">分類標籤</label>
                    </div>
                </div>
            </div>
        </div>
       

        <div class="col-6">
            <form method="post" class="p-4 border rounded-3 shadow-sm h-100 bg-light d-flex flex-column justify-content-between" enctype="multipart/form-data" asp-action="ActivityEdit">
                <input type="hidden" asp-for="ActivityId">

                <div class="form-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Title">活動名稱</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="StartTime">開始時間</label>
                            <input type="date" class="form-control" asp-for="StartTime">
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="EndTime">結束時間</label>
                            <input type="date" class="form-control" asp-for="EndTime">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3">標籤搜尋欄</label>
                        <input type="text" class="form-control">

                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Address">活動地點</label>
                        <input type="text" class="form-control" asp-for="Address">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="OfficialLink">官方連結</label>
                        <input type="text" class="form-control text-primary" asp-for="OfficialLink">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Description">活動描述</label>
                        <textarea class="form-control" asp-for="Description" rows="8"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label fw-bold fs-3">選擇照片</label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-lg w-100">儲存變更</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Activity" asp-controller="Activity" asp-action="Index" class="btn btn-warning btn-lg w-100">取消變更</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

      
</section>
<script>
    function changeImage(element, newSrc) {
        // 1. 更換主圖路徑
        document.getElementById('mainImg').src = newSrc;

        // 2. 移除所有縮圖的選取狀態
        document.querySelectorAll('.thumb-wrapper').forEach(el => {
            el.classList.remove('active-thumb');
        });

        // 3. 幫點擊的縮圖加上選取狀態
        element.classList.add('active-thumb');
    }
</script>
