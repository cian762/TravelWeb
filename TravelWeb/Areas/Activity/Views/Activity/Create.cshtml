@model TravelWeb.Areas.Activity.Models.ViewModels.ActivityEditViewModel



@section Styles{
    <style>
        .thumb-wrapper {
            transition: 0.3s;
            opacity: 0.6;
            border: 2px solid transparent !important;
        }

            .thumb-wrapper:hover {
                opacity: 1;
                border-color: #0d6efd !important;
            }

        .active-thumb {
            opacity: 1;
            border-color: #0d6efd !important;
        }
    </style>
}









<section class="container my-2">
    <h1>新增活動</h1>
    <div class="row d-flex align-items-stretch">
        <div class="col-4">
            <div class="d-flex flex-column h-100">
                <div class="border rounded-3 shadow-sm bg-white mb-3 overflow-hidden"
                     style="height: 800px; flex-shrink: 0;">
                    <img id="mainImg"
                         class="w-100 h-100"
                         style="object-fit: contain; background-color: #f8f9fa;">
                </div>

                <div id="previewContainer" class="d-flex justify-content-start gap-2 overflow-auto  border rounded-3 shadow-sm bg-white" style="height: 150px; flex-shrink: 0;">
                   
                </div>
            </div>
        </div>


        <div class="col-8">
            <form method="post" class="p-4 border rounded-3 shadow-sm h-100 bg-light d-flex flex-column justify-content-between" enctype="multipart/form-data" asp-action="ActivityCreate">

                <div class="form-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Title"></label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="StartTime"></label>
                            <input type="date" class="form-control" asp-for="StartTime">
                            <span class="text-danger" asp-validation-for="StartTime"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold fs-3" asp-for="EndTime"></label>
                            <input type="date" class="form-control" asp-for="EndTime">
                            <span class="text-danger" asp-validation-for="EndTime"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 ">
                            <label class="form-label fw-bold fs-3">區域標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Region)
                                {
                                    <div class="form-check me-3">
                                        <input class="form-check-input" type="checkbox"
                                               name="RegionName"
                                               value="@item"
                                               id="reg_@item"
                                               @(Model?.RegionName != null && Model.RegionName.Contains(item) ? "checked" : "")>
                                        <label class="form-check-label" for="reg_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>
                            <span class="text-danger" asp-validation-for="RegionName"></span>
                        </div>

                        <div class="col-6">
                            <label class="form-label fw-bold fs-3">類型標籤 (多選)</label>
                            <div class="d-flex flex-wrap">
                                @foreach (var item in ViewBag.Type)
                                {
                                    <div class="form-check me-3">
                                        <input class="form-check-input" type="checkbox"
                                               name="TypeName"
                                               value="@item"
                                               id="type_@item"
                                               @(Model?.TypeName != null && Model.TypeName.Contains(item) ? "checked" : "")>
                                        <label class="form-check-label" for="type_@item">
                                            @item
                                        </label>
                                    </div>
                                }
                            </div>
                            <span class="text-danger" asp-validation-for="TypeName"></span>
                        </div>
                    </div>


                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Address"></label>
                        <input type="text" class="form-control" asp-for="Address">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="OfficialLink"></label>
                        <input type="text" class="form-control text-primary" asp-for="OfficialLink">
                        <span class="text-danger" asp-validation-for="OfficialLink"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold fs-3" asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label fw-bold fs-3" name="images">相關照片</label>
                        <input class="form-control" type="file" id="formFileMultiple" name="images" accept=".jpg, .jpeg, .png, .webp" multiple>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-lg w-100">創建活動</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Activity" asp-controller="Activity" asp-action="Index" class="btn btn-warning btn-lg w-100">取消創建</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</section>


@section Scripts {
    <script>
        // 1. 將追蹤陣列放在最外層
        let currentFiles = [];

        document.getElementById('formFileMultiple').addEventListener('change', function (event) {
            const container = document.getElementById('previewContainer');
            const mainImg = document.getElementById('mainImg');
            const files = event.target.files;

            // 每次選擇時先清空畫面
            container.innerHTML = "";
            // 將 FileList 轉為真正的陣列存入 currentFiles
            currentFiles = Array.from(files);

            if (currentFiles.length > 0) {
                currentFiles.forEach((file, index) => {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        const imgSrc = e.target.result;

                        // 初始化第一張為主圖
                        if (index === 0) {
                            mainImg.src = imgSrc;
                        }

                        // 建立縮圖容器
                        const thumbDiv = document.createElement('div');
                        thumbDiv.className = 'thumb-wrapper border rounded-2 p-1 d-flex flex-column ' + (index === 0 ? ' active-thumb' : '');

                        // 點擊切換圖片
                        thumbDiv.onclick = function() {
                            changeImage(this, imgSrc);
                        };

                        // 建立圖片
                        const img = document.createElement('img');
                        img.src = imgSrc;
                        img.style.cssText = 'width: 120px; height: 120px; object-fit: contain; pointer-events: none;';

                        // 建立移除按鈕
                        const btn = document.createElement('button');
                        btn.textContent = '移除';
                        btn.type = 'button'; // 重要：避免按鈕觸發表單送出
                        btn.className = 'btn btn-danger btn-sm mt-1';

                        // --- 移除邏輯 ---
                        btn.onclick = function (e) {
                            e.stopPropagation(); // 阻止觸發縮圖的點擊事件

                            // A. 從陣列中過濾掉被刪除的這個 file
                            currentFiles = currentFiles.filter(f => f !== file);

                            // B. 更新 Input 標籤的顯示文字 (利用 DataTransfer)
                            const dt = new DataTransfer();
                            currentFiles.forEach(f => dt.items.add(f));
                            document.getElementById('formFileMultiple').files = dt.files;

                            // C. 移除 DOM 元素
                            thumbDiv.remove();

                            // D. 更新大圖：如果還有剩餘圖片，顯示第一張
                            const remainingThumbs = container.querySelectorAll('.thumb-wrapper img');
                            if (remainingThumbs.length > 0) {
                                // 抓取剩餘的第一個縮圖路徑
                                mainImg.src = remainingThumbs[0].src;
                                container.querySelector('.thumb-wrapper').classList.add('active-thumb');
                            } else {
                                mainImg.src = "";                            }
                        };

                        thumbDiv.appendChild(img);
                        thumbDiv.appendChild(btn);
                        container.appendChild(thumbDiv);
                    };
                    reader.readAsDataURL(file);
                });
            }
        });

        function changeImage(element, newSrc) {
            document.getElementById('mainImg').src = newSrc;
            document.querySelectorAll('.thumb-wrapper').forEach(el => {
                el.classList.remove('active-thumb');
            });
            element.classList.add('active-thumb');
        }
    </script>
}









