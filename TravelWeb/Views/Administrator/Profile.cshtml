@model TravelWeb.Models.Administrator

@{
    ViewData["Title"] = "管理員個人資料";
}

<h2 class="mb-4">管理員個人資料</h2>

<div class="card">
    <div class="card-body">

        <div class="mb-3">
            <label class="form-label fw-bold">管理員ID</label>
            <p class="form-control-plaintext">@Model.AdminId</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">信箱</label>
            <p class="form-control-plaintext">@Model.Email</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">姓名</label>
            <p class="form-control-plaintext">@Model.Name</p>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">電話</label>
            <p class="form-control-plaintext">@Model.Phone</p>
        </div>

    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        返回首頁
    </a>
</div>
