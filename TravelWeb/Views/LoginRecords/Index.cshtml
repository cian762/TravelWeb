@model IEnumerable<TravelWeb.Models.LogInRecord>

@{
    ViewData["Title"] = "登入紀錄管理";
}

<h2>登入紀錄查詢</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">

        <div class="col-md-3">
            <label>會員識別碼</label>
            <input type="text" name="memberCode" class="form-control"
                   value="@Context.Request.Query["memberCode"]" />
        </div>

        <div class="col-md-3">
            <label>開始時間</label>
            <input type="datetime-local" name="startDate" class="form-control"
                   value="@Context.Request.Query["startDate"]" />
        </div>

        <div class="col-md-3">
            <label>結束時間</label>
            <input type="datetime-local" name="endDate" class="form-control"
                   value="@Context.Request.Query["endDate"]" />
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">搜尋</button>
        </div>

    </div>
</form>

<hr />

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>登入編號</th>
            <th>會員識別碼</th>
            <th>登入時間</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.LoginRecordId</td>
                    <td>@item.MemberCode</td>
                    <td>@item.LoginAt?.ToString("yyyy/MM/dd HH:mm:ss")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">
                    尚無符合條件的登入紀錄
                </td>
            </tr>
        }
    </tbody>
</table>
