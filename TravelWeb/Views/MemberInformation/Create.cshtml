@model TravelWeb.Models.MemberInformation

@{
    ViewData["Title"] = "新增個人資料";
}

<h2 class="mb-4">新增個人資料</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <!-- 隱藏欄位：會員識別碼 -->
    <input type="hidden" asp-for="MemberCode" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">姓名</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gender" class="form-label">性別</label>
        <select asp-for="Gender" class="form-control">
            <option value="">請選擇</option>
            <option value="0">女</option>
            <option value="1">男</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="BirthDate" class="form-label">生日</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>

    <!-- 頭像上傳 -->
    <div class="mb-3">
        <label>上傳頭像</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">新增</button>
    <a asp-action="Create" class="btn btn-secondary">清除</a>

</form>