@model TravelWeb.Models.MemberList

@{
    ViewData["Title"] = "Create";
}

<h2>註冊會員</h2>

<form asp-action="Create" method="post">

    <!-- 💡 這個很重要：它會幫您印出卡住資料庫寫入的「隱藏錯誤訊息」 -->
    <div asp-validation-summary="All" class="text-danger mb-3 fw-bold"></div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>密碼</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">電話</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>


    <!-- ========================== -->
    <!-- 按鈕區塊新增在這邊 -->
    <!-- ========================== -->
    <div class="mt-4 d-flex gap-2">

        <!-- 送出表單的按鈕 -->
        <button type="submit" class="btn btn-primary">
            註冊
        </button>

        <!-- 清除表單內容的按鈕 -->
        <button type="reset" class="btn btn-secondary">
            清除
        </button>

        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />

    </div>

</form>